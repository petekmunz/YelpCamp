<% include ../partials/header %>
<div class="container">
    <div class="row align-items-center flex-column mt-5">
        <h2 class="centerH2">Create a New Campground</h2>
        <div style="width: 40%;" class="mt-2">
            <form action="/campgrounds" method="post">
                <div class="form-group">
                    <label for="campNameInput">Camp Name</label>
                    <input type="text" class="form-control" id="campNameInput" name="campName" placeholder="Enter camp"
                        required>
                </div>
                <div class="form-group">
                    <label for="campImageInput">Camp Image link</label>
                    <input type="text" class="form-control" id="campImageInput" name="campImage"
                        placeholder="Enter image link" required>
                </div>
                <div class="form-group">
                    <label for="campDescriptionInput">Camp Description</label>
                    <textarea name="campDescription" id="campDescriptionInput" placeholder="Enter brief description"
                        class="form-control" rows="7" required></textarea>
                </div>
                <div class="form-group">
                    <label for="campPriceInput">Camp Price</label>
                    <input type="number" class="form-control" id="campPriceInput" name="campPrice" min="0.01" step="0.01" placeholder="Enter price/night"
                        required>
                </div>
                <button type="submit" class="btn btn-primary btn-block">Submit</button>
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>

    </div>
</div>
<% include ../partials/footer %>